
@{
    Layout = null;
}
@model IEnumerable<CRUDusingADO.NETinMVC.Models.Student>

@using CRUDusingADO.NETinMVC.Models
<!DOCTYPE html>

<html>
<head>..
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        @Html.ActionLink("Create New Student", "Create")
        <table border="1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RollNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrainerId)
                    </th>
                </tr>
            </thead>
            <tbody>
               @foreach (Student student in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(model => student.RollNo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => student.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => student.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(model => student.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => student.DoB)
                    </td>
                    <td>
                        @Html.DisplayFor(model => student.City)
                    </td>
                    <td>
                        @Html.DisplayFor(model => student.TrainerId)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { rollnumber = student.RollNo })
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { rollnumber = student.RollNo }) @*View & action mtd is balance*@
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { rollnumber = student.RollNo }) @*View & action mtd is balance*@
                    </td>
                </tr>       
                }
            </tbody>
        </table>

    </div>
</body>
</html>
